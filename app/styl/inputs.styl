@import "~styl/colors"
@import "~styl/fonts"
@import "~styl/sizes"

::placeholder
  color rgba(#000, .3)
  font-family sansSerifFonts
  font-size 1em

inputFocus()
  outline none
  border-color brandOrange
  box-shadow 0 0 .0625em brandOrange

textarea
  resize none

textarea,
input[type="date"],
input[type="datetime"],
input[type="datetime-local"],
input[type="email"],
input[type="month"],
input[type="number"],
input[type="password"],
input[type="search"],
input[type="tel"],
input[type="text"],
input[type="time"],
input[type="url"],
input[type="week"]
  width 100%
  appearance none
  -webkit-tap-highlight-color transparent
  text-rendering optimizeLegibility
  background #fff
  padding .6em .8em

  @media firefoxOnlyQuery
    &:invalid
      box-shadow none

  &[disabled]
    background transparent

  &.standard
    border 1px solid #cfcfcf
    background #eee
    padding .6em .8em
    border-radius standardInputRadius

    &:focus
      inputFocus()
      background #fff
