@import "./styl/colors"

.hero
  align-items center
  background-color hsl(0, 100%, 99%)
  line-height 1.5
  min-height 100vh
  padding 1em 0
  position relative
  width 100%

  .logo-link
    width 75px
    max-width 100%

    > svg
      display block
      width 100%
      height 100%

  h1
    color brandOrange
    margin .3em 0 .45em

  h2
    margin 0 0 .5em

  p
    margin 0.5em 0
    max-width 26em
