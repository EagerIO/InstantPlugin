main(data-component="application" data-flow="column")
  a.logo-link
    != require("../../assets/logo.svg")

  h1 Instant Plugin

  .steps(data-active-step="embed-code" data-ref="stepsContainer")
    .step(data-ref="steps[]" data-step="embed-code")
      p Paste your embed code below:

      textarea.embed-code-input(
        data-ref="embedCodeInput"
        placeholder="<script>\n  \\\\...\n</script>")

      .step-buttons
        button.button.primary.next(data-ref="navigationButtons[]" data-step="attributes") Next

    .step(data-ref="steps[]" data-step="attributes")
      p Click parts of the embed code to make them dynamic:

      .attribute-picker(data-ref="attributePicker")
      .attribute-list-mount(data-ref="attributeListMount")

      .step-buttons
        button.button.secondary.transparent(data-ref="navigationButtons[]" data-step="embed-code") Back
        button.button.primary(data-ref="navigationButtons[]" data-step="preview") Preview Plugin

    .step(data-ref="steps[]" data-step="preview")
      .preview-container-wrapper
        .preview-container(data-ref="previewContainer")

      .step-buttons
        button.button.secondary.transparent(data-ref="navigationButtons[]" data-step="attributes") Back
        button.button.secondary.transparent(data-ref="navigationButtons[]" data-step="download") Next

    .step(data-ref="steps[]" data-step="download")
      form.form(data-ref="pluginDetailsForm")
        .input
          label Email
          input.standard(name="email" placeholder="Email" required type="email")

        .input
          label Title
          input.standard(name="app[title]" placeholder="Title" required type="text")

        .input
          label Short Description
            .help-text
              | A short description of the app.

          input.standard(maxlength="150" name="app[description]" placeholder="Description" required type="text")

        .input
          label Full Description
            .help-text
              | A long description for the WordPress Plugin page.
              | No length limit.

          textarea.standard(name="app[metadata][description]" placeholder="Full description")

        .input
          label Instructions
            .help-text
              | Installation instructions for the WordPress installer.

          textarea.standard(name="app[metadata][instructions]" placeholder="Instructions")

        .input
          label FAQ
            .help-text
              | Frequently asked questions about the app.

          textarea.standard(name="app[metadata][targets][wordpress][faq]" placeholder="FAQ")

      .step-buttons
        button.button.secondary.transparent(data-ref="navigationButtons[]" data-step="preview") Back
        button.button.primary.next(data-ref="downloadButton") Download Plugin

  .made-by
    .label Made by

    a.logo-link(href="https://eager.io")
      != require("../../assets/eager-logo.svg")
