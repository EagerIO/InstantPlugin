main(data-component="application" data-flow="column")
  a.logo-link
    != require("../../assets/logo.svg")

  h1 Instant Plugin

  .steps(data-active-step="embed-code" data-ref="stepsContainer")
    .step(data-ref="steps[]" data-step="embed-code")
      p Paste your embed code below:

      textarea.embed-code-input(
        data-ref="embedCodeInput"
        placeholder="<script>\n  \\\\...\n</script>")

      .step-buttons
        button.button.primary.next(data-ref="navigationButtons[]" data-step="attributes") Next

    .step(data-ref="steps[]" data-step="attributes")
      p Click parts of the embed code to make them dynamic:

      .attribute-picker(data-ref="attributePicker")
      .attribute-list(data-ref="attributeList")

      .step-buttons
        button.button.secondary.transparent(data-ref="navigationButtons[]" data-step="embed-code") Back
        button.button.primary(data-ref="navigationButtons[]" data-step="preview") Preview Plugin

    .step(data-ref="steps[]" data-step="preview")
      .preview-container(data-ref="previewContainer")

      .step-buttons
        button.button.secondary.transparent(data-ref="navigationButtons[]" data-step="attributes") Back
        button.button.primary.next(data-ref="downloadButton") Download Plugin

  .made-by
    .label Made by

    a.logo-link(href="https://eager.io")
      != require("../../assets/eager-logo.svg")
