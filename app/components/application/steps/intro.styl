@import "~styl/colors"

.step[data-step="intro"]

  .header
    align-items center
    text-align center

  .logo-link
    display inline-block
    max-width 100%
    width 75px

    > svg
      display block
      width 100%
      height 100%

  h1
    color brandOrange
    margin .3em 0 1em

  h2
    color #555
    font-weight normal
    margin 0
    width 17em
    max-width 100%
    font-size 2em
    font-weight 500
    line-height 1.3
    margin .5em 0

  p
    font-size 1.125em
    color #777
    margin .6em 0
    text-align left

  .content
    display block
    width 29em
    max-width 100%
    margin-left auto
    margin-right auto
    margin-bottom 3.5em
