@import "~styl/colors"

.step[data-step="intro"]
  .header
    align-items center
    text-align center

  .logo-link
    display inline-block
    max-width 100%
    width 75px

    > svg
      display block
      width 100%
      height 100%

  h1
    color brandOrange
    margin .3em 0 .45em

  h2
    margin 0 0 .5em

  p
    font-size 1em
    margin 0.6em 0
