@import "styl/colors"

.step

  h2
    font-size 1.5em
    color headerColor
    text-align center
    font-weight normal
    margin-top 0
    margin-left auto
    margin-right auto

  p
    font-size 1.125em
    color paragraphColor
    font-weight 300
    margin .6em 0

  .content
    display block
    width 29em
    max-width 100%
    margin-left auto
    margin-right auto
    margin-bottom 2rem
    text-align left

    &.short-instruction
      text-align center
