@import "./styl/colors"
@import "./styl/fonts"
@import "./styl/font-smoothing"

@keyframes highlight-borders
  0%, 100%
    border-color lightGray

  25%, 50%, 75%
    border-color brandOrange

[data-component="application"]
  width 100%
  position relative
  z-index 2
  align-items center
  flex-flow column nowrap
  justify-content center
  padding-top 3em
  padding-bottom @padding-top
  position relative
  line-height 1.5
  min-height 100vh

  .logo-link
    width 60px
    max-width 100%

    > svg
      display block
      width 100%
      height 100%

  h1
    color brandOrange
    margin .4em 0 1.25em

  @media mobileMaxWidthQuery
    padding-top 4em
    padding-bottom @padding-top

  .embed-code-input, .attribute-picker
    antialiasedFonts()
    display block
    font-family monospaceFonts
    color inherit
    background #fff
    border 0
    padding .8em 1em
    border-radius .75em
    resize none
    min-height 18.75em
    line-height 1.6
    width 100%
    box-shadow 0 .1875em .375em -.1875em rgba(#000, .325)

    &:focus
      outline none

  .steps
    width 37em
    min-height 20em
    position relative

    .step
      position relative
      display block
      width 100%
      margin auto
      transition transform .3s ease, opacity .3s ease
      transform translate3d(0, 0, 0)
      opacity 1

      p
        text-align center
        font-size 1.25em
        font-weight 300
        margin 0 0 1em

    .step-buttons
      display block
      margin-top 2em
      text-align center

      button + button
        margin-left 1em

    &[data-active-step="embed-code"] .attribute-step
      pointer-events none
      position absolute
      transform translate3d(5em, 0, 0)
      opacity 0

    &[data-active-step="attribute"] .embed-code-step
      pointer-events none
      position absolute
      transform translate3d(-5em, 0, 0)
      opacity 0

  .attribute-picker
    cursor default
    overflow-wrap break-word
    user-select none
    white-space pre-wrap
    word-break break-word
    word-wrap break-word

    [data-entity-id]
      animation highlight-borders 2s ease-in-out
      animation-delay 1.8s
      animation-fill-mode forwards
      background lightGrayRGBA
      border 1px solid lightGray
      border-radius 1em
      cursor pointer
      padding 0 .5em

      &:hover
        border-color darkGray

      &.tracked
        animation none
        background #fff

        &, &:hover
          border-color brandOrange

  .made-by
    display block
    text-align center
    margin 4em auto 0
    width 20em
    max-width 100%

    .label
      display block
      font-size .7em
      font-weight 100
      text-transform uppercase
      letter-spacing .1em
      text-indent @letter-spacing
      margin-bottom 1em
      opacity .3

    .logo-link
      color inherit
      display block
      width 6em
      height 3em
      margin auto

      &:not(:hover)
        opacity .3

      path
        fill currentColor
