.step[data-step="download"]
  justify-content space-between

  .header
    align-items center
    justify-content center
    flex 1 0 auto
    text-align center

    .icon
      margin 2em 0
      max-width 100%
      width 128px

    h1
      margin-top 0
      font-weight normal

    .download-link
      text-align center
      text-decoration none
      font-size .9em
      opacity 0.75

  .content
    width 50%
    margin 1em auto

  .footer
    flex 0 0 auto
    justify-content center
    margin 2em 0 1em
