@import "~normalize.css/normalize.css"
@import "~styl/fonts"
@import "~styl/buttons"
@import "~styl/more-links-and-buttons"
@import "~styl/loading-dots"
@import "~styl/form"
@import "~styl/inputs"

*, *::after, *::before
  box-sizing border-box

baseFontSize = 16px

html
  background #eee
  color textColor

html, body
  width 100%
  min-height 100vh

body
  overflow-y scroll

svg
  display block
  width 100%
  height 100%

body
  font-family sansSerifFonts
  font-size baseFontSize

div, footer, header, main, section
  display flex

[contenteditable]
  div, footer, header, section
    display block

[data-flow="column"]
  display flex
  flex-flow column nowrap

.actions
  display block
  text-align center

  .button + .button
    margin-left 1em

.step, form
  > .actions
    margin-top 2em

.download-iframe
  position fixed
  z-index -99999
  visibility hidden
  width 1px
  height 1px
